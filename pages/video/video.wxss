/* pages/video/video.wxss */

/* 搜索框部分 */
.videoHeader{
  display: flex;
  height: 60rpx;
  padding: 20rpx;
}
.videoHeader .videoSearchText{
  flex: 1;
  border: 1rpx solid #eee;
  color: #d43c33;
  margin: 0 20rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
}
.videoHeader image{
  height: 60rpx;
  width: 60rpx;
}

/* 导航条部分 */
.videoNav{
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}

.videoNav .navItem{
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.videoNav .navItem .navContent{
  height: 60rpx;
  box-sizing: border-box;
}

.videoNav .navItem .active{
  border-bottom: 1rpx solid #d43c33;
}

/* 视频列表区域样式 */
.videoScroll{
  margin-top: 20rpx;
  height: calc(100vh - 180rpx);
}

.videoScroll .videoItem{
  padding: 0 3%;
}

/* .videoItem video{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
} */

.videoItem .common{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}


.videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
